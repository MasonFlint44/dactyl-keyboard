{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Build models",
            "type": "python",
            "request": "launch",
            "module": "src.dactyl_manuform",
            "console": "integratedTerminal",
            "justMyCode": false,
            "autoReload": { "enable": true },
            "env": { "PYTHONPATH": "/opt/conda/envs/dactyl-keyboard/bin/python" }
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "module": "src.${fileBasenameNoExtension}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "autoReload": { "enable": true },
            "env": { "PYTHONPATH": "/opt/conda/envs/dactyl-keyboard/bin/python" }
        },
        {
            "name": "Python: Debug Test File",
            "type": "python",
            "request": "launch",
            "module": "src.${fileBasenameNoExtension}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "purpose": ["debug-test"],
            "autoReload": { "enable": true },
            "env": { "PYTHONPATH": "/opt/conda/envs/dactyl-keyboard/bin/python" }
        }
    ]
}